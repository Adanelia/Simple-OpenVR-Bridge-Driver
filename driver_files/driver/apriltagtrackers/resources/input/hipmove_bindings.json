{
  "jsonid": "input_profile",
  "controller_type": "hip_locomotion",
  "device_class": "TrackedDeviceClass_Controller",
  "resource_root": "apriltagtrackers",
  "driver_name": "apriltagtrackers",
  "input_bindingui_mode": "single_device",
  "should_show_binding_errors": true,
  "input_bindingui_left": {
    "image": "{apriltagtrackers}/icons/example_controller_left.svg"
  },
  "input_bindingui_right": {
    "image": "{apriltagtrackers}/icons/example_controller_right.svg"
  },
  "input_source": {

    "/input/joystick": {
      "type": "joystick",
      "click": true,
      "touch": true,
      "binding_image_point": [ 0, 0 ]

    }
  },
  "default_bindings": [
    {
      "app_key": "steam.app.438100",
      "binding_url": "steam.app.438100.json"
    }
  ]
}
